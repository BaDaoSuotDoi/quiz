<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llName"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project name"
            android:id="@+id/tvName"
            />
        <ImageView
            android:id="@+id/imName"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/pen"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/llName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llCreatedAt"
        >
        <ImageView
            android:backgroundTint="@color/primary"
            android:src="@drawable/calendar"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/20/12"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/llCreatedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llUpdateAt"
        >
        <ImageView
            android:src="@drawable/calendar"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tvUpdatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/20/12"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/llUpdateAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/llAction"
        >
        <ImageView
            android:src="@drawable/ic_project_edit_buttion"
            android:backgroundTint="@color/primary"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

       <TextView
           android:id="@+id/tvEdit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Edit"
           android:background="@drawable/ic_project_edit_buttion"
           />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llSeparate1"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/llAction"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:layout_below="@+id/llSeparate1"
        android:id="@+id/llTotalQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Total Questions"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/tvTotalQuestion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10"
                android:gravity="center"
                android:layout_weight="0.8"
                />
            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                >
                <ImageView
                    android:id="@+id/imTotalQuestion"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/pen"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/llTotalQuestion"
        android:id="@+id/llRandomMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Random mode enable"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/tvRandomMode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Yes"
                android:gravity="center"
                android:layout_weight="0.8"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                >
                <ImageView
                    android:id="@+id/imRandomMode"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/down"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/llRandomMode"
        android:id="@+id/llQuestionPerSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Question per session"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/tvQuestionPerSession"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10"
                android:gravity="center"
                android:layout_weight="0.8"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                >
                <ImageView
                    android:id="@+id/imQuestionPerSession"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pen"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/llQuestionPerSession"
        android:id="@+id/llDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Duration of the questionnaire"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10"
                android:gravity="center"
                android:layout_weight="0.8"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                >
                <ImageView
                    android:id="@+id/imDuration"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pen"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>