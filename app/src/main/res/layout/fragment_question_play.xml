<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvContent"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tvComment"
        android:textColor="@color/primary"
        android:layout_below="@+id/tvContent"
        android:padding="10dp"
        android:background="@drawable/shadow_background"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llYourAnswer"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/shadow_background"
        android:layout_margin="10dp"
        android:layout_below="@+id/tvComment"
        >
        <TextView
            android:textColor="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Your answer"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            tools:listitem="@layout/item_answer_fill_text"
            />
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/llYourAnswer"
       android:orientation="vertical"
       android:padding="10dp"
       android:background="@drawable/shadow_background"
       android:layout_margin="10dp"
       android:visibility="invisible"
       android:id="@+id/llSolution"
       >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="15dp"
           android:text="Solution"
           android:textColor="@color/primary"
           />
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/rcSolution"
           tools:listitem="@layout/item_solution_fill_text"
           />
   </LinearLayout>
</RelativeLayout>