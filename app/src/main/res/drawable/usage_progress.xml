<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/color_light_blue_opacity"
                android:centerColor="@color/color_light_blue_opacity"
                android:centerY="1.0"
                android:endColor="@color/color_light_blue_opacity"
                android:angle="270"
                />

            <corners
                android:radius="15dp"/>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/color_green"
                    android:centerColor="@color/color_green"
                    android:centerY="1.0"
                    android:endColor="@color/color_green"
                    android:angle="270"
                    />

                <corners
                    android:radius="15dp"/>
            </shape>
        </clip>
    </item>

</layer-list>